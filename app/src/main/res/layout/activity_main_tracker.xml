<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="0dp"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    tools:context=".MainTrackerActivity"
    android:background="#fff">




    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:textSize="32dp"
        android:textAlignment="center"
        android:layout_below="@+id/totalSugarIntake"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


    <com.google.android.gms.ads.AdView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        ads:adSize="BANNER"
        ads:adUnitId="@string/banner_ad_unit_id"
        android:id="@+id/adView">


    </com.google.android.gms.ads.AdView>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_above="@+id/adView"
        android:id="@+id/linearLayout">


        <Button
            android:layout_width="72dp"
            android:layout_height="70dp"
            android:text="Teaspoon (4g)"
            android:id="@+id/sugarUnit1Button"
            android:textSize="9sp"
            android:onClick="addSugar"
            android:tag = "4"
            android:layout_gravity="center"
            android:background="@drawable/abc_btn_colored_material"
            android:textColor="#fff"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp" />

        <Button
            android:layout_width="72dp"
            android:layout_height="70dp"
            android:text="Two Cubes  (8g)"
            android:id="@+id/sugarUnit2Button"
            android:textSize="9sp"
            android:onClick="addSugar"
            android:tag = "8"
            android:layout_gravity="center"
            android:background="@drawable/abc_btn_colored_material"
            android:textColor="#fff"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp" />

        <Button
            android:layout_width="75dp"
            android:layout_height="70dp"
            android:text="Tablespoon (12g)"
            android:id="@+id/sugarUnit3Button"
            android:textSize="8sp"
            android:onClick="addSugar"
            android:tag = "12"
            android:layout_gravity="center"
            android:background="@drawable/abc_btn_colored_material"
            android:textColor="#fff"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp" />

        <Button
            android:layout_width="72dp"
            android:layout_height="70dp"
            android:text="Glass of Juice (16g)"
            android:id="@+id/sugarUnit4Button"
            android:textSize="9sp"
            android:onClick="addSugar"
            android:tag = "16"
            android:layout_gravity="center"
            android:background="@drawable/abc_btn_colored_material"
            android:textColor="#fff"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp" />

        <Button
            android:layout_width="72dp"
            android:layout_height="70dp"
            android:text="Coke Can (25g)"
            android:id="@+id/sugarUnit5Button"
            android:textSize="9sp"
            android:onClick="addSugar"
            android:tag = "25"
            android:layout_gravity="center"
            android:background="@drawable/abc_btn_colored_material"
            android:textColor="#fff"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp" />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/totalSugarIntake"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <GridView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sugarIntakeGridView"
        android:layout_centerHorizontal="true"
        android:numColumns="4"
        android:choiceMode="none"
        android:layout_below="@+id/totalSugarIntake"
        android:layout_above="@+id/linearLayout" />


</RelativeLayout>
